{
  "appId": "com.school-management.app",
  "productName": "School Materials Management",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "package.json"
  ],
  "win": {
    "target": [
      "nsis"
    ],
    "icon": "electron/icon.png"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "installerIcon": "electron/icon.png",
    "uninstallerIcon": "electron/icon.png",
    "installerHeaderIcon": "electron/icon.png",
    "shortcutName": "ثانوية الوحدة الإعدادية - إدارة المواد"
  },
  "mac": {
    "target": [
      "dmg"
    ],
    "icon": "electron/icon.png"
  },
  "linux": {
    "target": [
      "AppImage"
    ],
    "icon": "electron/icon.png"
  }
}